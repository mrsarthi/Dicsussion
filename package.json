{
  "name": "decentrachat",
  "private": true,
  "version": "1.0.0",
  "description": "Decentralized end-to-end encrypted messaging app with blockchain identity",
  "author": "DecentraChat",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "node build-dist.js",
    "electron:pack": "electron-builder --dir",
    "dist": "node build-dist.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mrsarthi/Dicsussion.git"
  },
  "build": {
    "appId": "com.decentrachat.app",
    "productName": "DecentraChat",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "mrsarthi",
        "repo": "Dicsussion"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "ethers": "^6.16.0",
    "localforage": "^1.10.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "simple-peer": "^9.11.1",
    "socket.io-client": "^4.8.3",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "vite-plugin-node-polyfills": "^0.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "electron-squirrel-startup": "^1.0.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "terser": "^5.46.0",
    "vite": "^7.2.4",
    "wait-on": "^7.2.0"
  }
}
